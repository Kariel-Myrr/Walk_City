<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@drawable/mechanics">

    <Button
        android:background="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settings_back"
        android:text="@string/btm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:background="@drawable/menu_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
        <Switch
            android:id="@+id/switch_turns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings1" />

        <Switch
            android:id="@+id/switch_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings2" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>